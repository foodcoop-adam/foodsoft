= form_tag payments_adyen_hpp_path, method: :post do
  .controls
    = label_tag 'amount', ((params[:label] or t('.amount_pay')))
    .input-prepend
      %span.add-on= t 'number.currency.format.unit'
      = number_field_tag 'amount', @amount, min: 0, readonly: (params[:fixed]=='true'), class: 'input-mini'
  = submit_tag t('.submit')

  -# pass through options to allow reusing on error
  - %w(label title fixed).each do |k|
    = hidden_field_tag k, params[k] if params[k]
