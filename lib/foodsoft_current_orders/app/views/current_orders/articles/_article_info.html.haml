%span#article_info
  - if order_article
    = t('.from', supplier: order_article.order.name) + '; '
    = t('.unit', unit: order_article.article.unit) + '; '
    = units_history_line(order_article) + '; '
    = Article.human_attribute_name(:fc_price)
    = number_to_currency(order_article.price.fc_price(@ordergroup))
