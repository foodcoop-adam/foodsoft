- if Order.where(state: ['open', 'finished']).exists?
  = link_to group_order_path(:current) do
    .well.well-link
      - sum ||= 0
      .pull-right.price_total#group_orders_sum{data: {value: sum}}
        = number_to_currency sum unless sum == 0
      %i.icon-shopping-cart
      = t 'group_orders.my_current_order'
- else
  .well.well-link
    %i.icon-shopping-cart= t '.no_current_orders'
