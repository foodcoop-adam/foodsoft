- title 'Previous order', false

- content_for :sidebar do
  = render 'current_order_sidebar'
  .well
    %ul.nav.nav-list
      %li.nav-header My previous orders
      - @group_order_details.each do |(ends, price)|
        %li{class: ('active' if ends==@order_date)}
          = link_to group_order_path(ends) do
            = format_date ends
            .pull-right
              = number_to_currency price

#articles_table
  .page-header
    %h1
      %i.icon-shopping-cart{style: 'color: #999'}
      Previous order
      %span{style: 'font-weight: normal; font-size: 12pt; vertical-align: middle'}
        = orders_status_line(@orders)
  - if @orders.nil? or @orders.empty?
    Please select a previous order to view.
  - elsif @order_articles.nil? or @order_articles.empty?
    You have no articles in this order.
  - else
    = render 'order_articles'

= render 'edit_javascript'
