= render layout: 'layouts/header' do
  .container.layout-login
    = bootstrap_flash
    - if show_title?
      .page-header
        %h1
          = yield(:title)
          - if FoodsoftConfig[:sub_name]
            .sub-logo= expand_text FoodsoftConfig[:sub_name]
    = yield

    = render 'layouts/footer'
