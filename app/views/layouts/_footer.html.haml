- unless FoodsoftConfig[:page_footer].to_s == 'blank'
  %footer
    .pull-right
      = link_to I18n.t('layouts.foodsoft'), FoodsoftConfig[:foodsoft_url] if FoodsoftConfig[:foodsoft_url]
      - if Foodsoft.VERSION.revision.blank?
        = "v#{Foodsoft.VERSION}"
      - else
        %abbr{title: t('.revision', revision: Foodsoft.VERSION.revision)}= "v#{Foodsoft.VERSION}"
    %p
      - if (s = FoodsoftConfig[:page_footer]).blank?
        = link_to FoodsoftConfig[:name], FoodsoftConfig[:homepage]
      - else
        = raw s
